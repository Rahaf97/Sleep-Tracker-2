<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:paddingTop="75dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MetaWear Device"
        android:id="@+id/tvSelectedLabel"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selected Device"
        android:id="@+id/tvSelectedDevice"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvSelectedLabel"
        android:layout_alignStart="@+id/tvSelectedLabel" />

    <LinearLayout
        android:id="@+id/infofragment_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/tvSelectedLabel"
        android:layout_toStartOf="@+id/tvSelectedLabel" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchConnection"
        android:switchMinWidth="75dp"
        android:layout_alignBottom="@+id/tvStatus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvStatus"
        android:layout_below="@+id/tvSelectedDevice"
        android:layout_alignStart="@+id/tvSelectedDevice" />

</RelativeLayout>